{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "node",
            "@cloudflare/workers-types"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}